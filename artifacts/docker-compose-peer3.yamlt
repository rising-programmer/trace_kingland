version: '2'

services:

  couchdb3:
    container_name: couchdb3
    image: hyperledger/fabric-couchdb:latest
    # Comment/Uncomment the port mapping if you want to hide/expose the CouchDB service,
    # for example map it to utilize Fauxton User Interface in dev environments.
    ports:
      - "7984:5984"

  peer0.org3.kingland.com:
    container_name: peer0.org3.kingland.com
    extends:
      file:  base.yaml
      service: peer-base
    environment:
      - CORE_PEER_ID=peer0.org3.kingland.com
      - CORE_PEER_LOCALMSPID=Org3MSP
      - CORE_PEER_ADDRESS=peer0.org3.kingland.com:7051
      - CORE_LEDGER_STATE_STATEDATABASE=CouchDB
      - CORE_LEDGER_STATE_COUCHDBCONFIG_COUCHDBADDRESS=couchdb3:5984
    ports:
      - 9051:7051
      - 9053:7053
    volumes:
        - ./channel/crypto-config/peerOrganizations/ORG_NAME.kingland.com/peers/peer0.org3.kingland.com/:/etc/hyperledger/crypto/peer
        - ../mount/peer0.org3.kingland.com/var/hyperledger/production:/var/hyperledger/production
    depends_on:
        - couchdb3
